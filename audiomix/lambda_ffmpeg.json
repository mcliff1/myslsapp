{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description": "Creates framework necessary for SLS services, including ACM certs, S3 buckets and cognito identity pool",
  "Parameters" : {
    "Project" : {
      "Description" : "Enter Project Name",
      "Type" : "String",
      "Default" : "FFMPEG Lambda Project"
    },
    "TargetBucket" : {
      "Description" : "S3 Bucket to store output",
      "Type" : "String",
      "Default" : "XXX"
    }
  },
  "Resources": {


    "Mp3Role" : {
      "Type" : "AWS::IAM::Role",
      "Properties" : {
        "AssumeRolePolicyDocument" : {
          "Statement" : [
            {
              "Effect" : "Allow",
              "Principal" : {
                "Service" : [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path" : "/",
        "Policies" : [
          {
            "PolicyName" : "mp3build-service",
            "PolicyDocument" : {
              "Version" : "2012-10-17",
              "Statement" : [
                {
                  "Action" : [
                    "lambda:*"
                  ],
                  "Resource" : "*",
                  "Effect" : "Allow"
                },
                {
                  "Action" : [
                    "s3:*"
                  ],
                  "Resource" : { "Fn::Join" : ["", ["arn:aws:s3:::", {"Ref" : "TargetBucket" }] ]},
                  "Effect" : "Allow"
                },
                {
                  "Action" : [
                    "s3:ListAllMyBuckets"
                  ],
                  "Resource" : "arn:aws:s3:::*",
                  "Effect" : "Allow"
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "Project" : {
      "Description" : "The Project Name",
      "Value" : {"Ref": "Project"}
    }

  },

  "Metadata": {
    "AWS::CloudFormation::Interface" : {
      "ParameterGroups" : [
        {
          "Label" : { "default" : "Project Information"},
          "Parameters" : [ "Project" ]
        },
        {
          "Label" : { "default" : "Buckets"},
          "Parameters" : [ "TargetBucket"]
        }
      ],
      "ParameterLabels" : {
        "TargetBucket": { "default" : "Name of S3 bucket to store results" }
      }
    }
  }
}
